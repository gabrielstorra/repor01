#include <stdio.h>

void main()
{
    int arr[4][4];
    int matriz;
   
    for(int g = 0; g < 4; g++)
    {
        printf("Coloca o valor da coluna %d da primeira linha:", g);
        scanf("%d", &arr[0][g]);
       
        if( g == 0 )
        {
            for(int h = 1; h < 4; h++)
            {
                printf("COloca o valor da linha %d da primeira coluna:", h);
                scanf("%d", &arr[h][0]);
            }
        }
    }
   
    for(int g = 1; g < 4; g++)
    {
        for(int h = 1; h < 4; h++)
        {
            if(arr[g-1][g-1] > arr[g-1][h])
                matriz = arr[g-1][g-1];
            else
                matriz = arr[g-1][h];
           
            if(matriz < arr[g][h-1])
                matriz = arr[g][h-1];

            arr[g][h] = matriz;
        }
    }
   
    for(int l = 0; l < 4; l++)
    {
        for(int c = 0; c < 4; c++)
        {
            printf("ARR[%d][%d] = %d  ", l, c, arr[l][c]);
        }
        printf("\n");
    }
}
